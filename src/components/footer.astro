---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://github.com/daniel-le97",
    description: "Github Profile",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.linkedin.com/in/daniel-le97/t",
    description: "LinkedIn Profile",
    icon: "fa-brands:linkedin",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-80">
    <HeroImage />
  </div>
  
<div class="relative flex flex-col space-y-10">
    <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }

    <li>
      <a
        class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
      >
        <span class="sr-only">Email</span>
        <Icon class="h-full" name="mdi:email" />
      </a>
    </li>
  </ul>
  <a class="flex items-center gap-3 hover:!text-default relative   font-extrabold" href="https://github.com/mhyfritz/astro-landing-page">
   Built With
    <h1 class="sr-only">Astro</h1>
    <Icon name="logomark" class="h-10" />
    <Icon name="wordmark" class="hidden h-4 sm:block" />
  </a>
</div>
</footer>
