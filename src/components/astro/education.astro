---
import ContentSection from "~/components/astro/content-section.astro";
import { education } from "../../store/education.ts";
---

<ContentSection title="Experience" id="experience">
  <div class="">
    <ol class="relative border-l border-gray-200 dark:border-gray-700">
      {
        education.map((data) => (
          <li class="mb-10 ml-4">
            <div class="absolute -left-1.5 mt-1.5 h-3 w-3 rounded-full border border-white bg-gray-200 dark:border-gray-900 dark:bg-gray-700" />
            <time class="mb-1 font-normal leading-none text-gray-400 text-sm dark:text-gray-500">
              {data.date}
            </time>
            <h3 class="font-semibold text-gray-900 text-lg dark:text-white">
              {data.title}
            </h3>
            <p class="mb-4 font-normal text-gray-500 text-base dark:text-gray-400">
              {data.description}
            </p>
          </li>
        ))
      }
    </ol>
  </div>
</ContentSection>
